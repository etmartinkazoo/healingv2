---
import Contact from "@components/Contact/Contact.astro";
import PortfolioImage from "@components/PorfolioImage/PortfolioImage.astro";
import PortfolioGrid from "@components/Portfolio/PortfolioGrid.astro";
import TestimonialQuote from "@components/Testimonials/TestimonialQuote.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import { type CollectionEntry, getCollection } from "astro:content";

import BaseLayout from "./BaseLayout.astro";

interface Props {
	portfolio: CollectionEntry<"portfolios">;
}

const { portfolio } = Astro.props as Props;
const { title, description, date, images, clients, location, heroImage, goal, challenges, solution, outcome } = portfolio.data;

const cards = [
	{ icon: "tabler:target", title: "Goal", text: goal },
	{ icon: "tabler:alert-triangle", title: "Challenges", text: challenges },
	{ icon: "tabler:bulb", title: "Solution", text: solution },
	{ icon: "tabler:plant-2", title: "Outcome", text: outcome },
];

// find other portfolios to show later down the page
const otherPortfolios = await getCollection("portfolios", (otherPortfolio) => {
	// filter out draft pages
	return otherPortfolio.data.draft !== true && otherPortfolio.id !== portfolio.id;
});
---

<BaseLayout
	type="general"
	title={title}
	description={description}
	heroImage={heroImage}
	navStartStyle="white"
>
	<div class="relative h-[50svh] w-full overflow-hidden md:h-[70svh]">
		<div class="absolute inset-0 z-10 bg-black/30"></div>
		<Image
			src={heroImage}
			alt={`cover for ${title}`}
			class="absolute inset-0 h-full w-full object-cover object-center md:hidden"
			width={800}
			densities={[1.5, 2]}
			loading="eager"
			transition:name={`portfolio-image-${portfolio.id}`}
		/>
		<Image
			src={heroImage}
			alt={`cover for ${title}`}
			class="absolute inset-0 hidden h-full w-full object-cover object-center md:block"
			width={1920}
			densities={[1.5, 2]}
			loading="eager"
		/>
	</div>

	<article class="mx-auto mt-12 px-4 md:mt-20 md:max-w-6xl">
		<h1 class="h1 description mt-4 text-center uppercase">
			{title}
		</h1>

		<!-- location -->
		<h2
			class="h3 text-primary-500 mt-10 flex flex-col items-center justify-center gap-x-3 gap-y-1 tracking-widest md:flex-row"
		>
			<span>{location}</span>
		</h2>

		<!-- goal / challenges / solution / outcome cards -->
		<div class="mt-10 grid gap-6 sm:grid-cols-2 md:mt-16 md:gap-8">
			{
				cards.map((card) =>
					card.text ? (
						<div class="bg-base-100 rounded-md p-6 md:p-8">
							<div class="flex items-center gap-3">
								<Icon name={card.icon} class="text-primary-500 size-7 shrink-0" />
								<h3 class="h3 uppercase">{card.title}</h3>
							</div>
							<p class="description mt-4 text-pretty md:text-lg">{card.text}</p>
						</div>
					) : null
				)
			}
		</div>

		<!-- portfolio images -->
		<div class="mx-auto mt-12 max-w-5xl space-y-6 md:mt-20 md:space-y-16">
			{
				images.map((imageGroup) => (
					<div
						class:list={[
							"mb-6 grid gap-6 md:gap-16",
							{
								"grid-cols-1": imageGroup.length === 1,
								"grid-cols-2": imageGroup.length === 2,
								"grid-cols-3": imageGroup.length === 3,
							},
						]}
					>
						{imageGroup.map((image) => (
							<PortfolioImage image={image} numCols={imageGroup.length} />
						))}
					</div>
				))
			}
		</div>
	</article>

	<TestimonialQuote />

	<section class="mx-auto mt-12 px-4 md:mt-16 md:max-w-5xl">
		<h3 class="h2 text-center">More Case Studies</h3>
		<PortfolioGrid portfolios={otherPortfolios} noTransitions />
	</section>
	<Contact class="mt-12" />
</BaseLayout>
