---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import aboutData from "@/data/pages/about.json";

import image1 from "@assets/images/IMG_6674.webp";
import image2 from "@assets/images/IMG_0226.webp";
import image3 from "@assets/images/IMG_2680.webp";
import image4 from "@assets/images/IMG_6873.webp";

const images = [image1, image2, image3, image4];
---

<BaseLayout
	title={aboutData.pageTitle}
	description={aboutData.pageDescription}
>
	<section class="mx-auto max-w-6xl px-4 pt-24 md:pt-36">
		<h1 class="h1 description text-center">{aboutData.pageTitle}</h1>

		{aboutData.sections.map((section, index) => (
			<div class:list={[
				"flex flex-col items-center gap-10",
				index === 0 ? "mt-12 md:mt-20" : "mt-16 md:mt-24",
				index === aboutData.sections.length - 1 && "pb-16 md:pb-24",
				index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse",
			]}>
				<div class="md:w-1/2">
					<h2 class="h2">{section.heading}</h2>
					<p class="description mt-4 text-base md:text-lg">
						{section.paragraph1}
					</p>
					<p class="description mt-4 text-base md:text-lg">
						{section.paragraph2}
					</p>
				</div>
				<div class="md:w-1/2">
					<div class="aspect-[4/3] overflow-hidden">
						<Image
							src={images[index]}
							alt={section.imageAlt}
							width={600}
							densities={[1.5, 2]}
							class="h-full w-full object-cover"
						/>
					</div>
				</div>
			</div>
		))}
	</section>
</BaseLayout>
