---
import About from "@components/About/About.astro";
import Button from "@components/Button/Button.astro";
import Contact from "@components/Contact/Contact.astro";
import FeatureNumbers from "@components/Feature/FeatureNumbers.astro";
// components
import Hero from "@components/Hero/Hero.astro";
import PortfolioThreeCards from "@components/Portfolio/PortfolioThreeCards.astro";
import PricingThreeCards from "@components/Pricing/PricingThreeCards.astro";
import Testimonials from "@components/Testimonials/Testimonials.astro";
// data
import siteData from "@config/siteData.json";
import homeData from "@/data/pages/home.json";
import servicesData from "@/data/pages/services.json";
// layout
import BaseLayout from "@layouts/BaseLayout.astro";
import { resolveImage } from "@js/resolveImage";
---

<BaseLayout title={siteData.title} description={siteData.description} navStartStyle="white">
	<Hero
		heading={homeData.hero.heading}
		subtitle={homeData.hero.subtitle}
		ctaText={homeData.hero.ctaText}
		image={resolveImage(homeData.hero.image)}
	/>
	<FeatureNumbers
		heading={homeData.whatIDo.heading}
		tagline={homeData.whatIDo.tagline}
		missionStatement={homeData.whatIDo.missionStatement}
		items={homeData.whatIDo.items}
	/>
	<PortfolioThreeCards />
	<Testimonials />
	<PricingThreeCards
		heading={servicesData.heading}
		ctaText={servicesData.ctaText}
	/>
	<About
		subheading={homeData.about.subheading}
		heading={homeData.about.heading}
		body={homeData.about.body}
		signoff={homeData.about.signoff}
		image={resolveImage(homeData.about.image)}
	/>
	<Contact
		heading={homeData.contact.heading}
		description={homeData.contact.description}
		image={resolveImage(homeData.contact.image)}
	/>
</BaseLayout>
