---
/**
 * * Contact section for the website
 */

import ContactForm from "@components/Forms/ContactForm.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
	class?: string;
	heading?: string;
	description?: string;
	image?: ImageMetadata;
}

const {
	class: className,
	heading = "Let's Talk!",
	description = "Have questions or ready to start your garden project? I am here to help! Fill out the form and I will get back to you in 1-2 business days. Let's create something beautiful together.",
	image,
} = Astro.props;

const contactImage = image ?? (await import("@assets/images/IMG_0024.webp")).default;
---

<section
	id="contact"
	class="mx-auto max-w-md scroll-mt-10 px-4 py-8 md:max-w-6xl md:py-12"
	class:list={[className]}
>
	<h2 class="h2 md:px-12 lg:text-6xl">{heading}</h2>
	<div class="grid gap-y-10 md:grid-cols-2">
		<div class="border-primary-300 pt-8 md:border-r md:pr-20 md:pl-12">
			<p class="description text-lg">
				{description}
			</p>
			<div class="mx-auto mt-8 aspect-square overflow-hidden">
				<Image
					src={contactImage}
					alt="garden design"
					width={450}
					densities={[1.5, 2]}
					class="h-full w-full object-cover"
				/>
			</div>
		</div>
		<div class="md:pr-12 md:pl-20">
			<ContactForm />
		</div>
	</div>
</section>
