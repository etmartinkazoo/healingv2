---
/**
 * * This is a "What I Do" services overview section.
 */

interface FeatureCardData {
	largeText: string;
	description: string;
}

const featureData: FeatureCardData[] = [
	{
		largeText: "Consult",
		description: `Garden consultations and seasonal guidance`,
	},
	{
		largeText: "Design",
		description: `Custom planting plans and landscape design drawings`,
	},
	{
		largeText: "Grow",
		description: `Native, pollinator, vegetable, cut flower, and medicinal herb gardens`,
	},
	{
		largeText: "Support",
		description: `Plant shopping and installation support`,
	},
];
---

<section id="feature-numbers" class="bg-base-100 scroll-mt-10 py-8 md:py-12">
	<div class="mx-auto max-w-6xl px-4">
		<div class="text-prety mr-auto text-center">
			<h2 class="h2">What I Do</h2>
		</div>

		<div
			id="feature-numbers-cards"
			class="mt-6 grid gap-10 gap-y-16 sm:grid-cols-2 md:mt-12 lg:grid-cols-4"
		>
			{
				featureData.map((feature) => (
					<div class="flex flex-col gap-3 text-center">
						<h3 class="font-decorative text-primary-500 text-4xl leading-none md:text-5xl">
							{feature.largeText}
						</h3>
						<p class="description font-heading-1 pr-2 text-lg">
							{feature.description}
						</p>
					</div>
				))
			}
		</div>

		<p class="description mt-10 text-center text-lg italic">
			All services are plant-forward and tailored to your space, lifestyle, and experience level.
		</p>

		<div class="mt-8 text-center">
			<p class="description text-base md:text-lg">
				My mission is to help bridge the gap between wild spaces and our cities by transforming everyday yards into living ecosystemsâ€”places that nurture plants, people, and wildlife alike.
			</p>
		</div>
	</div>
</section>
