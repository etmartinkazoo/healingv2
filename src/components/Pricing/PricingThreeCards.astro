---
/**
 * * Services & Pricing cards
 */

import Button from "@components/Button/Button.astro";

interface pricingItem {
	name: string;
	featured?: boolean;
	price: string;
	features: string[];
}

const pricingData: pricingItem[] = [
	{
		name: "Garden Consultation",
		featured: false,
		price: "$150",
		features: [
			"1-2 hours, on-site or virtual",
			"Evaluation of sun, soil, drainage, and existing plants",
			"Plant-focused recommendations tailored to your lifestyle",
			"Follow-up email with seasonal plan and next steps",
			"Ongoing support for the remainder of the growing season",
		],
	},
	{
		name: "Simple Planting Plan",
		featured: false,
		price: "$300",
		features: [
			"Basic planting plan tailored to your space",
			"Thoughtful plant selection based on site conditions",
			"Plant list with quantities",
			"General care guidance",
		],
	},
	{
		name: "Detailed Landscape Design",
		featured: true,
		price: "$400–$1,000",
		features: [
			"Custom, to-scale landscape drawings",
			"Comprehensive plant list and quantities",
			"Seasonal interest and ecological considerations",
			"Design tailored to pollinators, wildlife, and long-term success",
		],
	},
	{
		name: "Installation Assistance",
		featured: false,
		price: "$100/hr",
		features: [
			"Plant placement and layout guidance",
			"Planting assistance and spacing recommendations",
			"Education during installation",
			"Plant-focused only — no hardscape installation",
		],
	},
	{
		name: "Plant Shopping Assistance",
		featured: false,
		price: "$100/hr",
		features: [
			"Accompaniment to local nurseries or curated sourcing",
			"Help selecting healthy plants and appropriate substitutes",
			"Ensuring plants align with your design and site conditions",
		],
	},
];
---

<section id="pricing" class="mx-auto max-w-6xl scroll-mt-10 px-4 py-8 md:py-12">
	<div class="mx-auto max-w-6xl text-center">
		<h2 class="h2 text-pretty uppercase">Services & Pricing</h2>
	</div>

	<div
		class="mx-auto grid w-full max-w-md gap-12 pt-8 sm:max-w-none sm:grid-cols-2 md:pt-12 lg:grid-cols-3"
	>
		{
			pricingData.map((plan) => (
				<div
					class="flex w-full flex-col"
					class:list={[
						{
							"bg-primary-200": plan.featured === true,
						},
					]}
				>
					<div class="border-primary-200 flex h-full flex-col justify-between border-2 pt-10 pb-10">
						<div>
							<h3 class="h2 text-center">{plan.name}</h3>

							<p class="font-decorative text-base-800 mt-4 flex justify-center text-center text-4xl leading-none md:text-5xl">
								{plan.price}
							</p>

							<ul class="mt-6 flex flex-col gap-3 px-8">
								{plan.features.map((feature) => (
									<li class="leading-snug lg:text-lg lg:leading-snug">{feature}</li>
								))}
							</ul>
						</div>
					</div>
				</div>
			))
		}
	</div>

	<div class="mt-12 flex justify-center">
		<Button href="/#contact" variant="outline" class="px-8">Get in touch</Button>
	</div>
</section>
